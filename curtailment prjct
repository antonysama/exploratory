# 1. Load data 
install.packages("data.table")        
library(data.table)     
dt<-fread("data.csv") 

# 2. Top years and month(s) not needed
n=1 
dt<- dt[!(dt$y=="201710"),]

# 3. Find the "a-term"
install.packages("dplyr") 
library(dplyr)
a<-dt %>% group_by(opratr)%>% summarize(mean(tail(sort(value),n)))
names(a) <- c("oprtr", "m3m")
## an alternative  to find "a" with package plyr:
##df1<-ddply(dt,~oprtr,summarise,mean=mean(tail(sort(value),n)))

# 4. Find "a-bc"
install.packages("tidyverse")
library(tidyverse)
b=10000
bc=b*0.15898*31
df3<-a %>% mutate_at(.vars = vars(contains("m3m")), 
                       .funs = funs(ifelse(. > 0, . -bc, .)))#option:.vars = vars(var2)
"a_bc"<-sum(df3$m3m)

# 5. Find production limits
"curt"=14156338
f<-curt/a_bc
pdn<-df3 %>% mutate_at(.vars = vars(contains("m3m")), 
                       .funs = funs(ifelse(. > 0, . *f, .)))
pdn$bpm=pdn$m3m*6.28
pdn$bpd=pdn$m3m*0.2
write.csv(pdn, file="pdn.csv")

